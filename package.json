{
  "name": "@freik/passable",
  "version": "0.0.1",
  "type": "module",
  "module": "index.ts",
  "bin": {
    "passable": "build/bun.js",
    "passable-node": "build/node.js"
  },
  "files": [
    "build/bun.js",
    "build/node.js"
  ],
  "keywords": [
    "cmake",
    "formatter",
    "format",
    "cmake-format",
    "cmakeformat",
    "cmake-formatter",
    "cmakeformatter",
    "auto-formatter",
    "autoformatter",
    "auto-format",
    "autoformat",
    "prettier",
    "cli",
    "cmakelists",
    "cmakelists.txt"
  ],
  "scripts": {
    "typecheck": "tsc",
    "typechk": "tsc",
    "types": "tsc",
    "type": "tsc",
    "start": "bun run index.ts",
    "test": "bun test",
    "lint": "eslint . --ext .ts",
    "format": "tools format bun",
    "fmt": "tools format bun",
    "build-bun": "bun build --outfile build/bun.js --target bun ./bun.ts --minify",
    "build-node": "bun build --outfile build/node.js --target node ./node.ts --minify",
    "build": "bun run build-bun && bun run build-node",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@freik/workspace": "^0.6.5",
    "@types/bun": "latest",
    "prettier-plugin-organize-imports": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@freik/typechk": "^0.9.0",
    "glob": "^11.0.3"
  }
}
